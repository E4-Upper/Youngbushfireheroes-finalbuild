@model IEnumerable<youngbushfireheroes.Models.Activity>

@{
    ViewBag.Title = "Activity - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .left-column-half {
        text-align: center;
        float: left;
        width: 50%;
    }

    .right-column-half {
        text-align: center;
        float: right;
        width: 50%;
    }

    .acard {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    abutton {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #F65247;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }



        abutton:hover, a:hover {
            opacity: 0.7;
        }
</style>
<br />
<div class="info-box">
    <div class="info-container">
        <square-title>There are many ways to help animal friends.</square-title><br>
        <square-title>Lets do some activities to help them</square-title>
        <img src="~/Image/tutorial/are you learning by yourself.png" width="100%" />
        <div class="row">
            <div class="left-column">
                <a href="/Activities/Index#alone">
                    <img src="~/Image/tutorial/learn alone.png" width="100%" />
                </a>
            </div>
            <div class="right-column">
                <a href="/Activities/Index#parent">
                    <img src="~/Image/tutorial/learn with parent.png" width="100%" />
                </a>
            </div>
        </div>
    </div>
</div>
<div id="alone"></div>
<hr />

<div class="info-box">
    <div class="info-container">
        <square-title>Activities to do on your own</square-title>
    </div>
</div>
<br />

<div class="row">
    <div class="left-column-half">
        <div class="acard"> 
            <img src="~/Image/tutorial/cover pages/cover page of recycling.jpg" alt="John" style="width:100%">
            <h1>Go green</h1>
            <p class="title">Do it youself</p>
            <p>about 20 minutes</p>
            <div style="margin: 24px 0;">
            </div>
            <a href="/Activities/Details/2"><abutton>Learn</abutton></a>
        </div>
    </div>
    <div class="right-column-half">
        <div class="acard">
            <img src="~/Image/tutorial/cover pages/coverpage plant tree.png" alt="John" style="width:100%">
            <h1>Plant tree</h1>
