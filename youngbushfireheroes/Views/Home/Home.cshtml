@model IEnumerable<youngbushfireheroes.Models.Species>
@{
    ViewBag.Title = "";
}
<br />
<br/> 
    <div class="show-box">
        <div class="show-container">
            <show-text>Welcome to our website Young Bush fire Heroes!</show-text>
            <h3>Recent bush fire caused many problems. It caused problems to our Animals friends too. But don't worry, there many ways to help Animal friends. We will need your help to do that.</h3>

            <h3> Lets start by learning about bush fire. </h3>
            <a href="~/Bushfire/Index">
                <img class=" responsive" src="~/Image/homepage/linktobushfire.jpg" width="600" />

            </a>
            <h1 class="img-shake">↑click on it!↑</h1>
        </div>


    </div> 
<div class="image-container">
    <div class="mySlides ">
        <div class="numbertext">1 / 3</div>
        <img src="~/Image/pic for affected animal func.JPG" style="width:100%">
        <div class="text-block">
            <h4>affected Animals</h4>
            <p>Kangaroos were hold by the firemen, who saved them in the bushfire.</p>
        </div>
    </div>

    <div class="mySlides">
        <div class="numbertext">2 / 3</div>
        <img src="~/Image/pic for animal.JPG" style="width:100%">

    </div>

    <div class="mySlides">
        <div class="numbertext">3 / 3</div>
        <img src="~/Image/pic for bushfire func.JPG" style="width:100%">
        <div class="text-block">
            <h4>After Bushfire</h4>
            <p>After the bushfire, tree trunk sprout and get new life.</p>
        </div>
    </div>


    <a class="prev" onclick="plusSlides(-1)">
        <img src="~/Image/go left icon.png" width="50"/>
    </a>
    <a class="next" onclick="plusSlides(1)">
        <img src="~/Image/go right icon.png" width="50"/>
    </a>

    <div class="caption-container">
        <p id="caption"></p>
    </div>

    <div class="row">
        <div class="column">
            <img class="demo cursor" src="~/Image/pic for affected animal func.JPG" style="width:150px" onclick="currentSlide(1)" alt="Affected Animals">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/Image/pic for animal.JPG" style="width:150px" onclick="currentSlide(2)" alt="Koala">
        </div>
        <div class="column">
            <img class="demo cursor" src="~/Image/pic for bushfire func.JPG" style="width:150px" onclick="currentSlide(3)" alt="After Bushfire">
        </div>
    </div>
</div>

<hr />



<div class="bubble-container bubble-image-cropper   x1">
    <a href='@Url.Action("SpeciesDetail", "Home")'>
        <img src="~/Image/Question mark 2.png"  class="bubble-image" style="width:100%" />
        </a>
</div>

<div class="bubble-container bubble-image-cropper   x4">

    <a href='@Url.Action("SpeciesDetail", "Home")'>
        <img src="~/Image/Question mark 2.png" class="bubble-image" style="width:100%" />
    </a>
</div>


